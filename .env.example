# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CONNECTION_TIMEOUT=30000
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_RETRY_ATTEMPTS=8
KAFKA_RETRY_DELAY=300

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1h

# Internal API Key for notifications
INTERNAL_API_KEY=your-internal-api-key-here

# Socket.IO CORS Configuration
# Comma-separated list of allowed origins (e.g., http://localhost:3000,https://yourdomain.com)
# Use '*' to allow all origins (not recommended for production)
SOCKET_CORS_ORIGIN=*
# Set to 'true' to allow credentials (cookies, authorization headers)
SOCKET_CORS_CREDENTIALS=true
# Comma-separated list of allowed methods
SOCKET_CORS_METHODS=GET,POST
# Comma-separated list of allowed headers
SOCKET_CORS_ALLOWED_HEADERS=Content-Type,Authorization
